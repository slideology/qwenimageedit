{
  "name": "qwen-image-edit",
  "version": "1.0.0",
  "description": "Qwen Image Edit - AI驱动的智能图像编辑平台",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install:frontend": "cd frontend && npm install",
    "clean": "rm -rf frontend/dist && rm -rf frontend/node_modules/.cache",
    "deploy:prepare": "npm run clean && npm run install:frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "test:frontend": "cd frontend && npm run test",
    "test": "./tests/scripts/run-tests.sh all",
    "test:e2e": "./tests/scripts/run-tests.sh e2e",
    "test:integration": "./tests/scripts/run-tests.sh integration",
    "test:performance": "./tests/scripts/run-tests.sh performance",
    "test:accessibility": "./tests/scripts/run-tests.sh accessibility",
    "test:seo": "./tests/scripts/run-tests.sh seo",
    "test:visual": "./tests/scripts/run-tests.sh visual",
    "test:responsive": "./tests/scripts/run-tests.sh responsive",
    "test:navigation": "./tests/scripts/run-tests.sh navigation",
    "test:homepage": "./tests/scripts/run-tests.sh homepage",
    "test:ui": "npx playwright test --ui",
    "test:headed": "./tests/scripts/run-tests.sh all --headed",
    "test:debug": "./tests/scripts/run-tests.sh all --debug",
    "test:report": "npx playwright show-report",
    "test:install": "npx playwright install"
  },
  "keywords": [
    "qwen-image-edit",
    "ai-image-editing",
    "semantic-editing",
    "appearance-editing",
    "character-consistency",
    "text-editing-ai",
    "image-manipulation",
    "qwen-ai"
  ],
  "author": "Qwen Image Edit Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@browsermcp/mcp": "^0.1.3",
    "@upstash/context7-mcp": "^1.0.14",
    "puppeteer": "^24.14.0"
  }
}
